<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.Asclepius" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#003366</item>
        <item name="colorPrimaryVariant">#002244</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary color -->
        <item name="colorSecondary">#FEC015</item>
        <item name="colorSecondaryVariant">#FBAF00</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background color -->
        <item name="android:colorBackground">#E1E6EB</item>
        <item name="colorOnBackground">#212121</item>

        <!-- Surface color -->
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#424242</item>

        <!-- Error color -->
        <item name="colorError">#B00020</item>
        <item name="colorOnError">#FFFFFF</item>

        <!-- Selectable item background -->
        <item name="selectableItemBackground">?attr/selectableItemBackground</item>
    </style>

    <!-- Custom Theme -->
    <style name="Theme.Asclepius" parent="Base.Theme.Asclepius" />
</resources>
